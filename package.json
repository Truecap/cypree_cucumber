{
  "name": "test",
  "main": "index.js",
  "scripts": {
    "test": "cypress run --browser chrome --config-file cypress.config.js",
    "test:smoke": "cypress run --browser electron --config-file cypress.smoke.config.js",
    "report": "npx allure generate reports/ui/allure-results --clean -o reports/ui/allure-report && allure open reports/ui/allure-report",
    "allure:generate": "npx allure generate allure-results --clean",
    "clear": "rm -r reports/** || true"

  },
  "dependencies": {
    "cypress": "^10.4.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-real-events": "^1.7.1",
    "mochawesome": "^6.2.0" 
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/e2e/step_definitions"
  },
  "devDependencies": {
    "cypress-xpath": "^2.0.1"
  }
}
